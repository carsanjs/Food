<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hambuesafondo">

    <LinearLayout
        android:id="@+id/title_fastfood"
        android:layout_width="202dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059">

        <TextView
            android:id="@+id/text_fast"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:text="Fast"
            android:textAlignment="center"
            android:textColor="#FFDE0808"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_food"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Food"
            android:textAlignment="center"
            android:textColor="#FFEB3B"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/searchView2"
        android:layout_width="280dp"
        android:layout_height="51dp"
        android:alpha="0.7"
        android:background="#FFEB3B"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:hint="Puedes Buscar Aqui!...."
        android:textColor="@color/white"
        android:textColorHint="#BF360C"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />


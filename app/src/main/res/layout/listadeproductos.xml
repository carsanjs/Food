    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:ignore="MissingConstraints" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="297dp"
        android:layout_height="353dp"
        android:layout_marginBottom="148dp"
        android:contentDescription="sc_h"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="339dp"
            android:layout_height="370dp"
            android:layout_marginTop="20dp"
            android:background="#8045565E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_FindTypeLocation"
            tools:ignore="MissingConstraints"></TableLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linea_botones"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#7E0D0D"
            android:text="Atras"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#7E0D0D"
            android:text="Agregar"
            android:textAlignment="center"
            android:textColor="@color/white" />

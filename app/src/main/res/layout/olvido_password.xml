<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hambuesafondo">

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="172dp"
        android:layout_height="171dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="279dp"
        android:layout_height="78dp"
        android:alpha="0.8"
        android:background="#7E0D0D"
        android:paddingTop="10dp"
        android:text="Introduce tu direccion de correo electronico y te enviaremos un link para restablecer su contraseña"
        android:textAlignment="textStart"
        android:textColor="@color/gris_conteninput"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />

    <LinearLayout
        android:id="@+id/linear_fastfood"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324">

        <TextView
            android:id="@+id/text_fast"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="Fast"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/text_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textAlignment="viewStart"
            android:textColor="#FFEB3B"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menuopcion"
        android:layout_width="301dp"
        android:layout_height="69dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396">

        <TextView
            android:id="@+id/text_olvido_password"
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:text="Olvide mi contraseña"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_contenido"
        android:layout_width="311dp"
        android:layout_height="217dp"
        android:alpha="0.9"
        android:background="@drawable/btn_redondowhite"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84">

        <EditText
            android:id="@+id/text_EmailAddress"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gris_conteninput"
            android:inputType="textEmailAddress"
            android:paddingTop="10dp"
            android:text="Correo Electronico"
            android:textAlignment="center"
            android:textColor="@color/gris_textinput"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_enviarlink"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gris_conteninput"
            android:backgroundTint="#7E0D0D"
            android:paddingTop="10dp"
            android:text="Enviar Link De Restablecimiento"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>